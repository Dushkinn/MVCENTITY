@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.Profile
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>SomeView</title>
</head>

<body>
    <div class="container text-center">
        <h2>Add Profile</h2>

        <form class="mx-auto text-center" asp-action="Add">
            @Html.ValidationSummary(true)
            <div>
                <label asp-for="Name" class="control-label">Name</label>
                <br />
                <input asp-for="Name" type="text" />
                <br />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Surname" class="control-label">SurName</label>
                <br />
                <input asp-for="Surname" type="text" />
                <br />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="MobilePhone" class="contol-label">MobilePhone</label>
                <br />
                <input asp-for="MobilePhone" type="text" />
                <br />
                <span asp-validation-for="MobilePhone" class="text-danger"></span>
            </div>
            <br />
            <button class="btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>


