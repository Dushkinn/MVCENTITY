@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Models.User
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>SomeView</title>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/additional-methods.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>

<body>
    <div class="container text-center">
        <h2>Add User</h2>

        <form class="mx-auto text-center" asp-action="Add">
            <div>
                <label asp-for="login" class="control-label">Login</label>
                <br />
                <input asp-for="login" type="text" />
                <br />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="password" class="control-label">Password</label>
                <br />
                <input asp-for="password" type="text" />
                <br />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ProfileId" class="contol-label">ProfileID</label>
                <br />
                <input asp-for="ProfileId" type="text" />
                <br />
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <br />
            <button class="btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>


